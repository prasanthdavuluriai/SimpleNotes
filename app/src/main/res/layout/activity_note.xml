<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textViewVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bible Version: WEB"
            android:textColor="@color/bible_gold"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <ImageButton
            android:id="@+id/buttonVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_globe"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:tint="@color/bible_gold"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:theme="@style/WhiteCursorTheme"
        app:boxBackgroundMode="outline">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/note_title"
            android:inputType="textCapSentences|textAutoCorrect"
            android:maxLines="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/selector_text_editor"
            android:textColorHint="#80F5F5DC"
            android:textCursorDrawable="@drawable/cursor_thick_white" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="24dp"
        android:hint="@string/note_content"
        android:theme="@style/WhiteCursorTheme"
        app:expandedHintEnabled="false"
        app:boxBackgroundMode="outline">

        <androidx.appcompat.widget.AppCompatMultiAutoCompleteTextView
            android:id="@+id/editTextContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:padding="16dp"
            android:inputType="textMultiLine|textCapSentences"
            android:minLines="10"
            android:textSize="16sp"
            android:scrollbars="vertical"
            android:gravity="top|start"
            android:textColor="@color/bible_cream"
            android:textColorHint="#80F5F5DC"
            android:completionThreshold="1"
            android:popupBackground="@drawable/bg_autocomplete"
            android:textCursorDrawable="@drawable/cursor_thick_white" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>