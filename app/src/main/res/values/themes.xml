        <item name="colorPrimary">@color/bible_blue_dark</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/bible_gold</item>
        <item name="colorSecondary">@color/bible_gold</item>
        <item name="colorSecondaryVariant">@color/bible_gold_dim</item>
